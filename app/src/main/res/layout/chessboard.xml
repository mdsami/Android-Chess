<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff575759"
    android:orientation="vertical">

    <GridView
        android:id="@+id/chessboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:columnWidth="60dp"
        android:gravity="center_horizontal"
        android:numColumns="8"
        android:padding="5dp"
        android:stretchMode="columnWidth">
    </GridView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="white"
        android:textColor="@color/white"
        android:textSize="18pt" />

        <TextView
            android:id="@+id/txt_inCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/incheck"
            android:textColor="@color/white"
            android:textSize="18pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wpawn_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wpawn" />

        <TextView
            android:id="@+id/wpawn_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="16pt" />

        <ImageView
            android:id="@+id/wrook_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wrook" />

        <TextView
            android:id="@+id/wrook_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="16pt" />

        <ImageView
            android:id="@+id/wknight_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wknight" />

        <TextView
            android:id="@+id/wknight_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="16pt" />

        <ImageView
            android:id="@+id/wbishop_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wbishop" />

        <TextView
            android:id="@+id/wbishop_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="16pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bpawn_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bpawn" />

        <TextView
            android:id="@+id/bpawn_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="16pt" />

        <ImageView
            android:id="@+id/brook_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/brook" />

        <TextView
            android:id="@+id/brook_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="16pt" />

        <ImageView
            android:id="@+id/bknight_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bknight" />

        <TextView
            android:id="@+id/bknight_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="16pt" />

        <ImageView
            android:id="@+id/bbishop_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bbishop" />

        <TextView
            android:id="@+id/bbishop_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="16pt" />
    </LinearLayout>
</LinearLayout>

